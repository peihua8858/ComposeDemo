<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="searchHistoryClearTint" format="color|reference" />
    <attr name="searchHistoryClearBgTint" format="color|reference" />
    <attr name="selectableItemRadius" format="dimension" />
    <declare-styleable name="ProgressView">
        <attr name="pv_anim_duration" format="integer" />
        <attr name="pv_outer_color" format="color|reference" />
        <!--<attr name="pv_inner_color" format="color|reference" />-->
        <attr name="pv_thickness" format="dimension" />
        <!--<attr name="pv_inner_padding" format="dimension" />-->
        <attr name="pv_log_color" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="PullRefreshLayout">
        <attr name="prl_refreshEnable" format="boolean" />
        <attr name="prl_loadMoreEnable" format="boolean" />
        <attr name="prl_twinkEnable" format="boolean" />
        <attr name="prl_autoLoadingEnable" format="boolean" />
        <attr name="prl_headerFront" format="boolean" />
        <attr name="prl_footerFront" format="boolean" />

        <attr name="prl_refreshTriggerDistance" format="dimension" />
        <attr name="prl_loadTriggerDistance" format="dimension" />
        <attr name="prl_pullDownMaxDistance" format="dimension" />
        <attr name="prl_pullUpMaxDistance" format="dimension" />
        <attr name="prl_topOverScrollMaxTriggerOffset" format="dimension" />
        <attr name="prl_downOverScrollMaxTriggerOffset" format="dimension" />

        <attr name="prl_resetAnimationDuring" format="integer" />
        <attr name="prl_refreshAnimationDuring" format="integer" />
        <attr name="prl_overScrollMinDuring" format="integer" />

        <attr name="prl_dragDampingRatio" format="float" />
        <attr name="prl_overScrollDampingRatio" format="float" />
        <attr name="prl_overScrollAdjustValue" format="float" />

        <attr name="prl_targetId" format="reference" />

        <attr name="prl_headerViewId" format="reference" />
        <attr name="prl_footerViewId" format="reference" />

        <attr name="prl_headerShowGravity" format="enum">
            <enum name="follow" value="0" />
            <enum name="follow_placeholder" value="1" />
            <enum name="follow_center" value="2" />
            <enum name="placeholder" value="3" />
            <enum name="placeholder_follow" value="4" />
            <enum name="placeholder_center" value="5" />
            <enum name="center" value="6" />
            <enum name="center_follow" value="7" />
        </attr>

        <attr name="prl_footerShowGravity" format="enum">
            <enum name="follow" value="0" />
            <enum name="follow_placeholder" value="1" />
            <enum name="follow_center" value="2" />
            <enum name="placeholder" value="3" />
            <enum name="placeholder_follow" value="4" />
            <enum name="placeholder_center" value="5" />
            <enum name="center" value="6" />
            <enum name="center_follow" value="7" />
        </attr>
    </declare-styleable>
    <declare-styleable name="RoundImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>


        <!-- 描边宽度-->
        <attr name="riv_border_width" format="dimension" />
        <!-- 描边颜色-->
        <attr name="riv_border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_scrollViewId" format="reference" />
        <attr name="msv_noNetworkView" format="reference" />
        <attr name="msv_processView" format="reference" />
        <!--强制显示内容区域，默认false-->
        <attr name="msv_forceShowContent" format="boolean" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
            <enum name="noNetwork" value="4" />
        </attr>
        <attr name="msv_animateViewChanges" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ShapeBlurView">
        <attr name="blur_radius" format="dimension" />
        <attr name="blur_down_sample" format="float" />
        <attr name="blur_overlay_color" format="color" />
        <attr name="blur_corner_radius" format="dimension" />
        <attr name="blur_corner_radius_top_left" format="dimension" />
        <attr name="blur_corner_radius_top_right" format="dimension" />
        <attr name="blur_corner_radius_bottom_left" format="dimension" />
        <attr name="blur_corner_radius_bottom_right" format="dimension" />
        <attr name="blur_border_width" format="dimension" />
        <attr name="blur_border_color" format="color" />
        <attr name="blur_mode">
            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />
            <enum name="oval" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_corner_radius" format="dimension" />
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_inner_border_width" format="dimension" />
        <attr name="civ_inner_border_color" format="color" />
    </declare-styleable>
</resources>